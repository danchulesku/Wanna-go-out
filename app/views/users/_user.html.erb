<span class="user flex-nowrap">

  <span class="user-avatar">
    <%= image_tag(user_avatar(user), class: 'img-icon img-fluid', style: "width: 30px;") %>
  </span>
  <span class="user-name">
    <% if request.path == user_path(user) %>
      <%= user.name %>
    <% else %>
      <%= link_to user.name, user_path(user) %>
    <% end %>
  </span>

</span>
